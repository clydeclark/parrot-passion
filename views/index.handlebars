<h1 id="burger-head">Burger Devourer!</h1>

<div id="not-devoured">
    <h2>Burgers that are not devoured!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="devoured">
    <h2>Burgers that are devoured!</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>

<div id="add-burger">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Waiting
        </div>

        <button type="submit" id="new-burger">Add Burger</button>
    </form>
</div>

<img id="burger-pic" src="img/Floating-burger-PNG.png" alt="Burger" width="500px">